@using DeepFreez.WebApp.Model;
@using DeepFreez.WebApp.Service;

@inject WorkTaskService WorkTaskService

<p>Current Emp Task Schedule</p>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="toolbar">
    <a href="/EmployeeWTV">Shuffle <i class="fa fa-random" aria-hidden="true"></i></a>
    <a @onclick="nweek">Next Week <i class="fa fa-Next" aria-hidden="true"></i></a>
    <a @onclick="pweek">Previous Week <i class="fa fa-Back" aria-hidden="true"></i></a>
</div>

<div class="table-wrapper">
    <table class="fl-table">
        <thead>
            <tr>
                <th>Employee</th>
                <th>Task Slot</th>
                <th>Task Slot</th>
                <th>Task Slot</th>
                <th>Task Slot</th>
                <th>Task Slot</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emptasks in TaskSolutions)
            {
                <tr>
                    <td>@emptasks.Employee</td>
                    @foreach(var tasks in emptasks.TaskList)
                    {
                        <td>Task @tasks.TaskID : @tasks.TaskStart To @tasks.TaskEnd</td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    WeeklyTaskSolutions WeeklyTaskSolutions = new WeeklyTaskSolutions();
    List<TaskSolution> TaskSolutions = new List<TaskSolution>();
    private int WeekNumber = 1;
    protected async override void OnInitialized()
    {
        WeeklyTaskSolutions = await WorkTaskService.GetSolutions(WeekNumber);
        TaskSolutions = WeeklyTaskSolutions.TaskSolutions;
    }

    private void nweek()
    {
        if (WeekNumber < 1 || WeekNumber >4)
        {
            WeekNumber = 1;
        }
        else
        {
            WeekNumber++;
        }
    }
    private void pweek()
    {
        if (WeekNumber < 1 || WeekNumber > 4)
        {
            WeekNumber = 1;
        }
        else
        {
            WeekNumber--;
        }
    }
}
