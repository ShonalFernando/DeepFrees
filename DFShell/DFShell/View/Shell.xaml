<mah:MetroWindow x:Class="DFShell.View.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DFShell.View"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Deepfreez|Admin"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Height="768" Width="1366"
        >

    <mah:MetroWindow.Flyouts>
        <mah:FlyoutsControl>
            <mah:Flyout Theme="Accent" x:Name="LeftFlyout" Header="DeepFrees" Position="Left" IsOpen="True" Width="350">
                <!-- The content goes here -->
            </mah:Flyout>

        </mah:FlyoutsControl>
    </mah:MetroWindow.Flyouts>

    <Grid >
        <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" >
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#7FF1F1F1" Offset="0.007"/>
                        <GradientStop Color="#7FDADADA" Offset="1"/>
                    </LinearGradientBrush>
                </StackPanel.Background>
            <Button Style="{DynamicResource MahApps.Styles.Button.Circle}" Width="40" Height="40" Margin="25,0,0,0" Content="{iconPacks:Unicons Kind=Draggabledots, Height=20, Width=20}"/>
                <Button Style="{DynamicResource MahApps.Styles.Button.Circle}" Width="40" Height="40" Margin="25,0,0,0" Content="{iconPacks:BootstrapIcons Kind=PlusLg, Height=20, Width=20}"/>
                <Button Style="{DynamicResource MahApps.Styles.Button.Circle}" Width="40" Height="40" Margin="25,0,0,0" Content="{iconPacks:BootstrapIcons Kind=Magic,Height=20, Width=20}"/>
                <Button Style="{DynamicResource MahApps.Styles.Button.Circle}" Width="40" Height="40" Margin="25,0,0,0" Content="{iconPacks:BootstrapIcons Kind=Sliders, Height=20, Width=20}"/>
                <ToggleButton  Style="{DynamicResource MahApps.Styles.ToggleButton.Flat}" Width="100" VerticalAlignment="Stretch" Margin="35,0,0,0" Content="Toggle1"/>
            <ToggleButton  Style="{DynamicResource MahApps.Styles.ToggleButton.Flat}" Width="100" VerticalAlignment="Stretch" Margin="0,0,0,0" Content="Toggle2"/>
            <ToggleButton  Style="{DynamicResource MahApps.Styles.ToggleButton.Flat}" Width="100" VerticalAlignment="Stretch" Margin="0,0,0,0" Content="Toggle3"/>
            </StackPanel>
            <StatusBar Grid.Row="2"/>




    </Grid>
</mah:MetroWindow>
